= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .container.user-new{action: ""}
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Register
          .field
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, autofocus: true, type: "text", placeholder: "Username"
            .user-image.col-md-2
              %button.btn.btn-primary Add image
              = f.text_field :avatar, type: "file"
          = f.text_field :email, autofocus: true, type: "email", placeholder: "E-Mail"
          = f.text_field :password, autofocus: true, type: "password", placeholder: "Password"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member, autofocus: true, type: "text", placeholder: "Member"
          %h4 Region
          .user-user-member.row
            .user-name.col-md-12
              / %input{type: "text", placeholder: "Region"}/
              = f.text_field :region, autofocus: true, type: "text", placeholder: "Region"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              %textarea{name: "textarea", cols: "30", rows: "4", placeholder: "Profile"}
      .row.text-center.user-btn
        %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Save
