.container
  .form-signin
    = form_for(:login, url: user_session_path) do |f|
      %h2.form-signin-heading Please sign in
      %label.sr-only{for: "inputEmail"} Email address
      = f.text_field :email, autofocus: true, placeholder: "Email address", required: "", type: "email"
      %label.sr-only{for: "inputPassword"} Password
      = f.text_field :password, autofocus: true, placeholder: "Password", required: "", type: "password"
      .checkbox
        %label
          = f.text_field :remember_me, type: "checkbox", value: "remember_me"
          Remember me
      %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Sign in
    .text-center
      %p
        Not a member?
        = link_to "Sign up now", new_user_registration_path
